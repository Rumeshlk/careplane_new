{% extends 'baseadmin.html.twig' %}
{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <h1><a href={{ path('units_create') }}>
                    <button type="button" class="btn btn-success"><i class="fa fa-users fa-fw"></i> Add an Unit</button>
                </a></h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    DataTables Advanced Tables
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <table width="100%" class="table table-striped table-bordered table-hover"
                               id="dataTables-example">
                            <thead>
                            <tr>
                                <th>id</th>
                                <th>Singular Name</th>
                                <th>Name Plural</th>
                                <th>Abbreviation</th>
                                <th></th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for units in unit %}
                                <tr class="odd gradeX">
                                    <td>{{ units.id }}</td>
                                    <td>{{ units.nameSingular }}</td>
                                    <td>{{ units.abbreviation }}</td>
                                    <td>cap</td>
                                    <td class="text-center"><input type="checkbox"></td>
                                    <td class="text-center">
                                        <a href="{{ path('units_edit', {'id': units.id}) }}"><i
                                                    class="fa fa-pencil-square-o fa-lg" aria-hidden="true"></i></a> |
                                        <a href="{{ path('units_delete', {'id': units.id}) }}"><i
                                                    class="fa fa-trash fa-lg" aria-hidden="true"></i></a> |
                                        <a href="{{ path('patient_edit', {'id': units.id}) }}"><i
                                                    class="fa fa-search fa-lg" aria-hidden="true"></i></a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <!-- /.row -->
    </div>
    <!-- /#page-wrapper -->
{% endblock %}
    {% block stylesheets %}
    {% endblock %}
